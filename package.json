{
  "name": "what-where-when",
  "version": "1.0.0",
  "description": "",
  "main": "index",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "watch": "nodemon",
    "build": "tsc",
    "lint": "eslint \"src/**\"",
    "typeorm:entity": "typeorm entity:create entity",
    "m:show": "npm run typeorm -- migration:show -d ./src/modules/database/data-source.ts",
    "m:run": "npm run typeorm -- migration:run -d ./src/modules/database/data-source.ts",
    "m:revert": "npm run typeorm -- migration:revert -d ./src/modules/database/data-source.ts",
    "m:generate": "npm run typeorm -- migration:generate -d ./src/modules/database/data-source.ts ./src/migrations/migration",
    "m:create": "npm run typeorm -- migration:create ./src/migrations",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.2",
    "node-telegram-bot-api": "^0.61.0",
    "pg": "^8.11.3",
    "pino": "^8.15.1",
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.6.3",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.61.8",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
