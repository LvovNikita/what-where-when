{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["ES2017"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {},
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "allowUnusedLabels": true,
  },
  "ts-node": {},
  "exclude": ["node_modules", "tmp"],
  "include": ["./**/*.ts"],
}
